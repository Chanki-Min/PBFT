/*
car_specification 스키마

car_name : 차종, 50자 내외 스트링
bender : 브랜드(BMX,Hyundae...)
displacement : 배기량
release-year : 연식
*/
{
  //"mapping": {
  "dynamic": "strict",
  "properties": {
    "car_name": {
      "type": "text",
      "index": true
    },
    "bender": {
      "type": "keyword",
      "ignore_above": 50,
      "index": true,
      "null_value": "NULL"
    },
    "displacement": {
      "type": "integer",
      "coerce": true,
      "ignore_malformed": false,
      "index": true,
      "null_value": "NULL"
    },
    "release-year": {
      "type": "integer",
      "coerce": true,
      "ignore_malformed": false,
      "index": true,
      "null_value": "NULL"
    }
    //  }
  }
}