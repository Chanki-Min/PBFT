/*
car_specification 스키마

car_name : 차종, 50자 내외 스트링
vendor : 브랜드(BMX,Hyundae...)
displacement : 배기량
release-year : 연식
*/
{
  //"mapping": {
  "dynamic": "strict",
  "properties": {
    "car_name": {
      "type": "text"
    },
    "vendor": {
      "type": "keyword",
      "ignore_above": 50,
      "index": true
    },
    "displacement": {
      "type": "integer",
      "coerce": true,
      "ignore_malformed": false,
      "index": true
    },
    "release-year": {
      "type": "integer",
      "coerce": true,
      "ignore_malformed": false,
      "index": true
    }
    //  }
  }
}