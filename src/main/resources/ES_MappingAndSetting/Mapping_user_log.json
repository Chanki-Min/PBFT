/*
user_log 스키마

user_id : 50자 내외 스트링
login_time : yyyy-mm-dd hh:mm:ss 형식 스트링
verification_method : 50자 내외 스트링
car_id : 차량 번호판 (띄어쓰기 없이 50자 내외로 부탁드립니다)
*/
{
  //"mapping": {
  "dynamic": "strict",
  "properties": {
    "user_id": {
      "type": "keyword",
      "ignore_above": 50,
      "index": true,
      "null_value": "NULL"
    },
    "login_time": {
      "type": "date",
      "format": "yyyy-MM-dd HH:mm:ss||epoch_millis",
      "ignore_malformed": true,
      "index": true,
      "null_value": "NULL"
    },
    "verification_method": {
      "type": "keyword",
      "ignore_above": 50,
      "index": true,
      "null_value": "NULL"
    },
    "car_id": {
      "type": "keyword",
      "ignore_above": 50,
      "index": true,
      "null_value": "NULL"
    }
    //  }
  }
}